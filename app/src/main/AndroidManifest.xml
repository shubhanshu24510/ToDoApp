<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/to_do"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Todo"
        tools:targetApi="31">
        <activity
            android:name="com.example.todoapp.MainActivity"
            android:exported="false" />
        <activity
            android:name="com.example.todoapp.SplashScreenActivity"
            android:exported="false" />
        <activity
            android:name="com.example.todoapp.CreateCardActivity"
            android:exported="false" />
        <activity
            android:name="com.example.todoapp.UpdateCardActivity"
            android:exported="false" />
        <activity
            android:name="com.example.todoapp.SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.todoapp.UpdateCard"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.example.todoapp.CreateCard"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
    </application>

</manifest>